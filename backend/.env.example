# Server
NODE_ENV=development
PORT=4000

# Database
MONGO_URI=mongodb://localhost:27017/kiit_smartbus

# JWT
JWT_ACCESS_SECRET=dev_access_secret_change_me
JWT_REFRESH_SECRET=dev_refresh_secret_change_me
# e.g., 15m / 1h
JWT_ACCESS_TTL=15m
# e.g., 7d / 30d
JWT_REFRESH_TTL=7d

# CORS
# Comma-separated list; in dev you can leave empty to allow localhost
CORS_ORIGINS=http://localhost:5173

# Cookies
# Only set in production with your apex/domain (e.g., example.com)
# COOKIE_DOMAIN=

# Email (for password reset)
# For development, you can use Ethereal Email (no setup required)
# For production, use your Gmail or other SMTP service
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
